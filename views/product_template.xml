<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit_motion" model="ir.ui.view">
        <field name="name">Motion internal type of product</field>
        <field name="model">product.template</field>
        <!-- product.product_template_only_form_view -->
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="type" position="before">
                <field name="internal_type" required="True"/>

            </field>
            <page name="general_information" position="before">
                <page string="Informacion interna" name="internal_info">
                    <field name="feature_ids"/>
                    <field name="support_ids"/>
                </page>
                <page string="Parametros" name="parameters">
                    <group>
                        <field name="parameter_ids"/>
                    </group>
                    <group>
                        <field name="specification"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

</odoo>